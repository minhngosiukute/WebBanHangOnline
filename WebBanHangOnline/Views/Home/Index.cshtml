<!-- CSS cho Banner Quảng Cáo -->
<style>
    .advertisement-body {
        font-family: Arial, sans-serif;
        background-color: rgba(0, 0, 0, 0.5); /* Nền tối khi banner hiển thị */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 9999; /* Đảm bảo banner xuất hiện trên mọi nội dung */
        margin: 0;
    }

        .advertisement-body .advertisement-banner .banner {
            width: 400px;
            background: linear-gradient(135deg, #E81920, #56BABD, #BEFCFD, #458082);
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            padding: 20px;
            position: relative;
            color: #fff;
            animation: fadeIn 1s ease-in-out;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .advertisement-body .advertisement-banner .banner .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(255, 255, 255, 0.8);
        border: none;
        border-radius: 50%;
        width: 25px;
        height: 25px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        color: #000;
    }

        .advertisement-body .advertisement-banner .banner .close-btn:hover {
            background: rgba(255, 255, 255, 1);
        }

    .advertisement-body .advertisement-banner .banner h2 {
        font-size: 1.8rem;
        font-weight: bold;
        margin: 15px 0;
        color: #fff;
    }

    .advertisement-body .advertisement-banner .banner .discount {
        font-size: 1rem;
        background: #ffc107;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        display: inline-block;
        margin: 10px 0;
    }

    .advertisement-body .advertisement-banner .banner .description {
        margin: 15px 0;
        font-size: 1rem;
        line-height: 1.5;
    }

    .advertisement-body .advertisement-banner .banner img {
        width: 100%;
        border-radius: 10px;
        margin: 15px 0;
    }

    .advertisement-body .advertisement-banner .banner .cta {
        display: inline-block;
        padding: 10px 20px;
        background: #E81920;
        color: #fff;
        text-transform: uppercase;
        font-weight: bold;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 10px;
    }

        .advertisement-body .advertisement-banner .banner .cta:hover {
            background: #D6151B;
        }
</style>

