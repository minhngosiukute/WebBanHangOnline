@{
    ViewBag.Title = "Trang chủ Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Aurora Gradient Background -->
<style>
    /* Nền gradient động */
    .aurora-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: linear-gradient(120deg, #ff9a8b, #ff6ec7, #4e54c8, #0dceda);
        background-size: 200% 200%;
        animation: aurora-animation 10s ease infinite alternate;
        z-index: -1;
    }

    @@keyframes aurora-animation {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    /* Tiêu đề chào mừng */
    .welcome-header {
        text-align: center;
        color: white;
        font-size: 42px;
        font-weight: bold;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
        margin-bottom: 20px;
        animation: fade-in 2s ease-in-out;
    }

    @@keyframes fade-in {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Hộp nội dung sinh động */
    .dashboard-container {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 12px;
        padding: 30px;
        text-align: center;
        box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.2);
        animation: scale-up 1.5s ease;
        margin-top: 20px;
    }

    @@keyframes scale-up {
        0% {
            transform: scale(0.8);
            opacity: 0;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    .dashboard-container h2 {
        color: #4e54c8;
        font-size: 28px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .dashboard-container p {
        color: #555;
        font-size: 18px;
        margin-bottom: 20px;
    }

    /* Nút hiệu ứng động */
    .dashboard-container a {
        display: inline-block;
        padding: 10px 20px;
        background: linear-gradient(135deg, #ff6ec7, #4e54c8);
        color: white;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease-in-out;
        box-shadow: 0px 5px 15px rgba(255, 81, 130, 0.5);
    }

        .dashboard-container a:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 20px rgba(255, 81, 130, 0.7);
        }

    /* Hiệu ứng icon động */
    .welcome-icon {
        font-size: 80px;
        color: #ffd700;
        animation: bounce 2s infinite ease-in-out;
        margin-bottom: 20px;
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-15px);
        }
    }
</style>

<div class="aurora-bg"></div> <!-- Aurora Gradient Background -->
<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-12">
                <h1 class="welcome-header">
                    <i class="fas fa-star welcome-icon"></i>
                    Chào mừng trở lại, Admin!
                </h1>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="content">
    <div class="container-fluid">
        <div class="dashboard-container">
            <h2>Bạn đã sẵn sàng làm việc chưa?</h2>
            <p>
                Hãy kiểm tra các mục quản lý bên dưới để đảm bảo mọi thứ đang hoạt động tốt!
            </p>
            <a href="#">Bắt đầu quản lý</a>
        </div>
    </div>
</section>
