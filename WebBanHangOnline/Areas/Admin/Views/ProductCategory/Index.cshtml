@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>
@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/productcategory" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header aurora-background">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card aurora-background">
        <div class="card-header aurora-background">
            <h3 class="card-title">Danh sách @ViewBag.Title</h3>
            <div class="card-tools">
                <a href="/admin/ProductCategory/add" class="btn btn-primary">Thêm mới</a>
                @*<a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a>*@
            </div>
        </div>
        <div class="card-body aurora-background">
            <table class="table table-hover">
                <thead>
                    <tr>
                        @*<th><input type="checkbox" id="SelectAll" /></th>*@
                        <th>STT</th>
                        <th>Tiêu đề</th>
                        <th>Ngày tạo</th>
                        <th>Ngày cập nhật</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                @*<td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>*@
                                <td>@i</td>
                                <td>@item.Title</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.ModifiedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="/admin/productcategory/edit/@item.Id" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i>Sửa</a>
                                    <button type="button" data-id="@item.Id" class="btn btn-sm btn-outline-danger btnDelete">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
        </div>
    </div>
</section>

@Html.AntiForgeryToken()

@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                        i++;
                    }
                });
                if (str.length > 0) {
                    var conf = confirm('Bạn có muốn xóa các bản ghi này hay không?');
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/ProductCategory/DeleteAll',
                            type: 'POST',
                            data: { ids: str, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                } else {
                                    alert('Xóa thất bại!');
                                }
                            },
                            error: function (xhr, status, error) {
                                alert('Lỗi: ' + error);
                            }
                        });
                    }
                }
            });

            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                });
            });

            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa bản ghi này không?');
                if (conf === true) {
                    $.ajax({
                        url: '/admin/ProductCategory/Delete',
                        type: 'POST',
                        data: { id: id, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            } else {
                                alert('Xóa thất bại!');
                            }
                        },
                        error: function (xhr, status, error) {
                            alert('Lỗi: ' + error);
                        }
                    });
                }
            });
        });
    </script>
}