@model WebBanHangOnline.Models.EF.Supplier
@{
    ViewBag.Title = "Thêm nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/supplier" class="nav-link">Nhà cung cấp</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới nhà cung cấp</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/supplier">Nhà cung cấp</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="card aurora-background">
        <div class="card-header">
            <h3 class="card-title">Thông tin nhà cung cấp</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Supplier", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @*<div class="form-group">
                        <label>Mã nhà cung cấp</label>
                        @Html.TextBoxFor(x => x.SupplierCode, new { @class = "form-control", @placeholder = "Nhập mã nhà cung cấp" })
                        @Html.ValidationMessageFor(x => x.SupplierCode, "", new { @class = "text-danger" })
                    </div>*@

                    <div class="form-group">
                        <label>Tên nhà cung cấp</label>
                        @Html.TextBoxFor(x => x.SupplierName, new { @class = "form-control", @placeholder = "Nhập tên nhà cung cấp" })
                        @Html.ValidationMessageFor(x => x.SupplierName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Địa chỉ</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @placeholder = "Nhập địa chỉ" })
                        @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Nhập số điện thoại" })
                        @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Trạng thái</label>
                        <div class="form-check">
                            @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input", @checked = "checked" })
                            <label class="form-check-label">Hoạt động</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <a href="/admin/supplier" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer">
        </div>
    </div>
</section>

@section scripts{
    <script src="~/Scripts/jsConvert.js"></script>
}
